generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  login     String   @unique
  passwordHash  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  buildJobs BuildJob[]
  sessions  Session[]
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime
  ip        String?
  userAgent String?
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
}

model BuildJob {
  id        String   @id @default(cuid())
  userId    String
  status    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id])

  @@index([userId])
}